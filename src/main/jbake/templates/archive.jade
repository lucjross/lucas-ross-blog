doctype html
html
  include header.jade
  body(onload="prettyPrint()")
    div#wrap
      include menu.jade
      div.container

        div.page-header
          h1 Blog Archive

          - var toHide = 3;
          each post in posts
            if toHide > 0
              - toHide--;
            else
              h3 #{formatter.format(post.date,"MMMM yyyy")}

              h4 #{formatter.format(post.date,"dd")} -
                a(href='#{post.uri}') #{post.title}

  include footer.jade
